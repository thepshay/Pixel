<!DOCTYPE html>
<html>
  <head>
    <title>Pixel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="icon" type="image/x-icon" href="<%= image_url('icon.png') %>" />

    <!-- if current user exists sends current user to react store -->
    <% if logged_in? %>
      <script id="bootstrap-current-user" type="text/javascript">
        window.currentUser = <%= render("api/users/user.json.jbuilder",
          user: current_user).html_safe %>
      </script>
    <% end %>

    <!-- import image scrip for react to access -->
    <script type="text/javascript">
      window.joinPc = "<%= image_url('join_pc.png') %>";
      window.steamCash = "<%= image_url('steam-cash.png') %>"
      window.thumbsUp = "<%= image_url('thumbs-up.png') %>"
      window.thumbsDown = "<%= image_url('thumbs-down.png') %>"
      window.icon = "<%= image_url('icon.png') %>"
    </script>
  
    <!-- fav icon -->
    <script src="https://kit.fontawesome.com/f40158231d.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
