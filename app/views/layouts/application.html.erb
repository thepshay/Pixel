<!DOCTYPE html>
<html>
  <head>
    <title>Pixel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <!-- if current user exists sends current user to react store -->
    <% if logged_in? %>
      <script id="bootstrap-current-user" type="text/javascript">
        window.currentUser = <%= render("api/users/user.json.jbuilder",
          user: current_user).html_safe %>
      </script>
    <% end %>

    <!-- import image scrip for react to access -->
    <script type="text/javascript">
      window.joinPc = "<%= image_url('join_pc.png') %>";
      window.steamCash = "<%= image_url('steam-cash.png') %>"
    </script>
  
    <!-- fav icon -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

  </head>

  <body>
    <%= yield %>
  </body>
</html>
